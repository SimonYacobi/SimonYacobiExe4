<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_seriesName"
        android:layout_width="113dp"
        android:layout_height="28dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="100dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.876"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_dragon"
        tools:text="Game of Thrones" />

    <ImageView
        android:id="@+id/iv_dragon"
        android:layout_width="938dp"
        android:layout_height="257dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/game_of_thrones_dragon" />

    <TextView
        android:id="@+id/tv_seriesTagline"
        android:layout_width="189dp"
        android:layout_height="23dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/tv_seriesName"
        app:layout_constraintTop_toBottomOf="@+id/tv_seriesName"
        tools:text="Game of Thrones season 1" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="147dp"
        android:layout_height="238dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_dragon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_dragon"
        app:srcCompat="@drawable/game_of_thrones_poster" />

    <TextView
        android:id="@+id/tv_reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        tools:text="Top Reviews" />

    <TextView
        android:id="@+id/tv_review1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/tv_reviews"
        app:layout_constraintTop_toBottomOf="@+id/tv_reviews"
        tools:text="DiCaprioFan13" />

    <TextView
        android:id="@+id/tv_review2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/tv_review1"
        app:layout_constraintTop_toBottomOf="@+id/tv_review1"
        tools:text="Supermanfan-13" />

    <TextView
        android:id="@+id/tv_review1descriction"
        android:layout_width="383dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/tv_review1"
        app:layout_constraintTop_toBottomOf="@+id/tv_review1"
        tools:text="What can be said about Game of Thrones that hasn't already been said? It's universally thought of as one of the best series in the history of television. " />

    <TextView
        android:id="@+id/tv_review2decribtion"
        android:layout_width="380dp"
        android:layout_height="57dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/tv_review2"
        app:layout_constraintTop_toBottomOf="@+id/tv_review2"
        tools:text="You know a lot people say this about a ton of different shows but Game of Thrones is absolutely, without a doubt, one of the best TV shows ever created...it's damn near perfect" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toEndOf="@+id/tv_review1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.584"
        tools:text="11 November 2023" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toEndOf="@+id/tv_review2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.713"
        tools:text="10 December 2023" />
</androidx.constraintlayout.widget.ConstraintLayout>